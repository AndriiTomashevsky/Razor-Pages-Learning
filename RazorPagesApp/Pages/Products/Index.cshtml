@page
@model IndexModel
@{
	ViewData["Title"] = "Products";
}

<h2>@ViewData["Title"]</h2>

<p><a asp-page="Create">Add producut</a></p>
<table class="table">
	<thead>
		<tr><th>Name</th><th>Price</th><th></th></tr>
	</thead>
	<tbody>
		@foreach (var product in Model.Products)
		{
			<tr>
				<td>@product.Name</td>
				<td>@product.Price</td>
				<td>
					<form method="post">
						<a asp-page="Edit" asp-route-id="@product.Id">Update</a>
						<button type="submit" asp-page-handler="delete" asp-route-id="@product.Id">
							Delete
						</button>
					</form>
				</td>
			</tr>
		}
	</tbody>
</table>
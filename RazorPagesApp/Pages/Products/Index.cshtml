@page
@model IndexModel
@{
	ViewData["Title"] = "Список товаров";
}
<h2>@ViewData["Title"]</h2>

<p><a asp-page="Create">Add product</a></p>

<table class="table">
	<thead>
		<tr><th>Name</th><th>Price</th></tr>
	</thead>
	<tbody>
		@foreach (var product in Model.Products)
		{
			<tr><td>@product.Name</td><td>@product.Price</td></tr>
		}
	</tbody>
</table>